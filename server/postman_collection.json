{
  "info": {
    "name": "Riant Blog API",
    "_postman_id": "riant-blog-api-collection",
    "description": "Koleksi sederhana untuk API artikel (GET/POST/PUT/DELETE)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get all articles",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/articles",
          "host": ["{{baseUrl}}"],
          "path": ["api","articles"]
        }
      }
    },
    {
      "name": "Create article",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Judul contoh\",\n  \"content\": \"Isi contoh\",\n  \"author\": \"Riant\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/articles",
          "host": ["{{baseUrl}}"],
          "path": ["api","articles"]
        }
      }
    },
    {
      "name": "Update article",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Judul diupdate\",\n  \"content\": \"Isi diupdate\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/articles/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api","articles",":id"]
        }
      }
    },
    {
      "name": "Delete article",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/articles/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api","articles",":id"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" }
  ]
}
